<Page x:Class="AndromedaStudio.Controls.MenuPages.Debug"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:c="clr-namespace:AndromedaStudio.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
      mc:Ignorable="d" 
      Width="480" Height="380">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Label Content="• • • • •" Foreground="{StaticResource TextColor2}" HorizontalAlignment="Center" FontSize="15"/>
        <avalonedit:TextEditor
            SyntaxHighlighting="{Binding _highlighting}" Grid.Row="1"/>
        <StackPanel Margin="10,5"
                    Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <c:TextButton VerticalAlignment="Center" Content="{Binding Source={StaticResource @Execute}, Converter={StaticResource ToUpper}}"/>
        </StackPanel>
    </Grid>
</Page>
