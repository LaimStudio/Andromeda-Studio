<Page x:Class="AndromedaStudio.Controls.MenuPages.Debug"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:c="clr-namespace:AndromedaStudio.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
      mc:Ignorable="d" 
      Width="380" Height="280">
    <StackPanel>
        <Label Foreground="{StaticResource TextColor2}">Код ложить сюда</Label>
        <avalonedit:TextEditor
            SyntaxHighlighting="{Binding _highlighting}"
            Height="218" />
        <Button 
            Width="80" 
            Height="25" 
            Margin="5" 
            HorizontalAlignment="Right" 
            Content="Execute"/>
    </StackPanel>
</Page>
