<Page x:Class="AndromedaStudio.Data.Controls.MenuPages.Setting.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
      Width="419" Height="370">

    <c:ScrollViewer>
        <StackPanel Name="Body" Margin="5">
            <c:ComboboxMenu Icon="{StaticResource ComponentIcon}" Content="{DynamicResource _CurrentLanguage}"
                            Description="{DynamicResource @SelectLanguage}" HorizontalAlignment="Left" Width="200" Margin="5"/>
            <CheckBox Content="{DynamicResource @NightTheme}" Margin="5" Click="Checkbox" Tag="NightTheme"/>
        </StackPanel>
    </c:ScrollViewer>
</Page>
