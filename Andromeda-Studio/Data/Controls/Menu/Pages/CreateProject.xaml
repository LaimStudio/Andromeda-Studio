<Page x:Class="AndromedaStudio.Data.Controls.MenuPages.CreateProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
      xmlns:converters="clr-namespace:AndromedaStudio.Data.Classes"
      Width="240" Height="300">
    <Page.Resources>
        <converters:StringToUpperCaseConverter x:Key="ToUpperConverter"/>
    </Page.Resources>
    
    <Grid Margin="10,5">
        <c:TextBox VerticalAlignment="Top" PlaceHolder="{StaticResource @ProjectName}"/>
        <c:TextBox VerticalAlignment="Top" PlaceHolder="{StaticResource @Description}" Margin="0,30,0,0"/>
        <StackPanel Height="26" VerticalAlignment="Bottom"
                    Orientation="Horizontal" FlowDirection="RightToLeft">
            <c:TextButton Content="{Binding Source={StaticResource @Create}, Converter={StaticResource ToUpperConverter}}"/>

        </StackPanel>
    </Grid>
</Page>
