<Page x:Class="AndromedaStudio.Data.Controls.MenuPages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
      Width="570" Height="370">

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="SettingsList">
            <ListBoxItem DataContext="{StaticResource HomeIcon}" Content="{DynamicResource @General}" Tag="General" Selected="PageSelect"/>
            <ListBoxItem DataContext="{StaticResource InterfaceIcon}" Content="{DynamicResource @Interface}" Tag="Interface" Selected="PageSelect"/>
            <ListBoxItem DataContext="{StaticResource PencilIcon}" Content="{DynamicResource @Editor}" Tag="Editor" Selected="PageSelect"/>
        </ListBox>
        <Border Background="{DynamicResource Color2}" Grid.Column="1" Opacity="0.5"/>
        <Grid x:Name="Frames" Grid.Column="2">
            <Frame x:Name="Frame"/>
        </Grid>

    </Grid>
</Page>
