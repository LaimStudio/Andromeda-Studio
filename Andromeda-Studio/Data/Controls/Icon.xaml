<UserControl x:Class="AndromedaStudio.Data.Controls.Icon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AndromedaStudio.Data.Controls"
             mc:Ignorable="d" IsHitTestVisible="False">
    <Path x:Name="Container" Data="{Binding Path=Data, RelativeSource={RelativeSource AncestorType={x:Type local:Icon}}}" Fill="{Binding Path=Fill, RelativeSource={RelativeSource AncestorType={x:Type local:Icon}}}" Stretch="Uniform" Width="{Binding Path=Size, RelativeSource={RelativeSource AncestorType={x:Type local:Icon}}}"/>
</UserControl>
