<UserControl x:Class="AndromedaStudio.Data.Controls.HeadTools"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:AndromedaStudio.Data.Controls">
    <UserControl.Resources>
        <Style TargetType="Frame">
            <Setter Property="NavigationUIVisibility" Value="Hidden"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Style="{StaticResource Border}" Margin="0,5,0,0">
            <Grid>
                <Grid x:Name="Frames" Grid.Row="1" ClipToBounds="True">
                    <Frame x:Name="Frame"/>
                </Grid>
            </Grid>
        </Border>
        <c:Icon x:Name="Arrow" HorizontalAlignment="Right"
                    Data="{StaticResource ArrowMenuUpIcon}" Size="10" Fill="{DynamicResource Color1}"
                    Effect="{StaticResource ShadowBottom0}" Margin="0,-2,21,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
