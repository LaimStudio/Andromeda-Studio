<UserControl x:Class="AndromedaStudio.Data.Controls.HeadTools"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:AndromedaStudio.Data.Controls">
    <UserControl.Resources>
        <Style TargetType="Frame">
            <Setter Property="NavigationUIVisibility" Value="Hidden"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Effect="{StaticResource Shadow4}" Background="{DynamicResource HeadColor}" CornerRadius="0,0,4,4">
            <Grid>
                <Grid x:Name="Frames" ClipToBounds="True">
                    <Frame x:Name="Frame"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
