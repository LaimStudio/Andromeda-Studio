<UserControl x:Class="AndromedaStudio.Data.Controls.Snackbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AndromedaStudio.Data.Controls">
    <Border CornerRadius="3" Background="{DynamicResource Color10}" Height="45">
        <Grid>
            <TextBlock Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType={x:Type local:Snackbar}}}" Margin="15,0" Foreground="{DynamicResource Color3}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontFamily="Segoe UI Historic"/>
        </Grid>
    </Border>
</UserControl>
