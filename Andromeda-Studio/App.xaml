<Application
    x:Class="AndromedaStudio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Preloader.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Data/Themes/DropShadows.xaml"/>
                <ResourceDictionary Source="Data/Themes/Icons.xaml"/>
                <ResourceDictionary Source="Data/Themes/ControlStyles.xaml"/>

                <!--Language-->
                <ResourceDictionary Source="Data/Languages/en-US.xaml"/>
                
                <!--Colors-->
                <ResourceDictionary Source="Data/Themes/ColorPallete/Gray.xaml"/>
                <ResourceDictionary Source="Data/Themes/ColorPallete/Blue.xaml"/>

                <!--Theme-->
                <ResourceDictionary Source="Data/Themes/ColorPresets/Day.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
