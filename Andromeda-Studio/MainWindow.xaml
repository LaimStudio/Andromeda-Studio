<Window
    x:Class="AndromedaStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AndromedaStudio"
    xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
    mc:Ignorable="d"
    Style="{StaticResource WindowStyle}"
    Title="Andromeda Studio">
    <Grid>
        <DockPanel>
            <Border x:Name="Head" Background="{DynamicResource Color1}" BorderBrush="{DynamicResource Color3}"
                    Height="27" BorderThickness="0,0,0,1" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="Transparent" MouseLeftButtonDown="WindowMove" Grid.Column="0"/>
                    <c:Icon Data="{StaticResource Logo}" Grid.Column="0"/>
                    <Menu Grid.Column="1" WindowChrome.IsHitTestVisibleInChrome="True">
                        <MenuItem Header="{DynamicResource @File}">
                            <MenuItem Header="{DynamicResource @Create}">
                                <MenuItem Header="{DynamicResource @Project}"/>
                                <MenuItem Header="{DynamicResource @File}"/>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource @Open}"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Settings}"/>
                            <MenuItem Header="{DynamicResource @Exit}"/>
                        </MenuItem>
                        <MenuItem Header="{DynamicResource @Edit}"/>
                        <MenuItem Header="{DynamicResource @View}"/>
                        <MenuItem Header="{DynamicResource @Help}"/>
                    </Menu>
                </Grid>
            </Border>
            <Grid Background="{DynamicResource Color2}"/>
        </DockPanel>
    </Grid>
</Window>
