<Window
    x:Class="AndromedaStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
    Style="{StaticResource WindowStyle}"
    Title="Andromeda Studio">
    <Window.Resources>
        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}"/>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <Border x:Name="Head" Background="{DynamicResource Color1}" BorderBrush="{DynamicResource Color3}"
                    Height="27" BorderThickness="0,0,0,1" DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <c:Icon Data="{StaticResource Logo}" Grid.Column="0" Fill="{DynamicResource Color7}"/>
                    <Menu Grid.Column="1" WindowChrome.IsHitTestVisibleInChrome="True">
                        <MenuItem Header="{DynamicResource @File}">
                            <MenuItem Header="{DynamicResource @Create}">
                                <MenuItem Header="{DynamicResource @Project}" InputGestureText="Ctrl+Shift+N"/>
                                <MenuItem Header="{DynamicResource @File}" InputGestureText="Ctrl+N"/>
                            </MenuItem>
                            <MenuItem Header="{DynamicResource @Open}" InputGestureText="Ctrl+O"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Settings}"/>
                            <MenuItem Header="{DynamicResource @Exit}" InputGestureText="Alt+F4"/>
                        </MenuItem>
                        <MenuItem Header="{DynamicResource @Edit}">
                            <MenuItem Header="{DynamicResource @Undo}" InputGestureText="Ctrl+Z"/>
                            <MenuItem Header="{DynamicResource @Redo}" InputGestureText="Ctrl+T"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Search}" InputGestureText="Ctrl+F"/>
                        </MenuItem>
                        <MenuItem Header="{DynamicResource @View}">
                            <MenuItem Header="{DynamicResource @Customize-workspace}"/>
                            <MenuItem Header="{DynamicResource @Editor-Settings}"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Show-console}"/>
                        </MenuItem>
                        <MenuItem Header="{DynamicResource @Help}">
                            <MenuItem Header="{DynamicResource @Send-feedback}"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Documentation}"/>
                            <MenuItem Header="{DynamicResource @Technical-support}"/>
                            <MenuItem Header="{DynamicResource @Check-for-updates}"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @About}"/>
                            <Separator/>
                            <MenuItem Header="{DynamicResource @Welcome-Guide}"/>
                        </MenuItem>
                    </Menu>
                    <StackPanel Orientation="Horizontal" Grid.Column="3" WindowChrome.IsHitTestVisibleInChrome="True">
                        <StackPanel.Resources>
                            <Style TargetType="c:TextButton" BasedOn="{StaticResource {x:Type c:TextButton}}">
                                <Setter Property="IconSize" Value="9"/>
                                <Setter Property="Padding" Value="13,1,13,0"/>
                                <Setter Property="IconFill" Value="{DynamicResource Color7}"/>
                            </Style>
                        </StackPanel.Resources>
                        <c:TextButton Tag="Minimize" Icon="{StaticResource MinimizeIcon}" Click="WindowButtons"/>
                        <c:TextButton Tag="Maximize" Icon="{StaticResource MinimizedIcon}" Click="WindowButtons"/>
                        <c:TextButton Tag="Close" Icon="{StaticResource CloseIcon}" Click="WindowButtons"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Background="{DynamicResource Color2}"/>
        </DockPanel>
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="50,50,10,10"
                MouseEnter="Tools_MouseEnter" MouseLeave="Tools_MouseLeave"
                Background="Transparent">
            <Grid>
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="c:RadioButton" BasedOn="{StaticResource {x:Type c:RadioButton}}">
                            <Setter Property="Width" Value="40"/>
                            <Setter Property="Height" Value="40"/>

                            <Setter Property="IconFill" Value="{DynamicResource Color6}"/>
                            <Setter Property="IconSize" Value="14"/>
                        </Style>
                        <Style TargetType="Separator" BasedOn="{StaticResource Separator}"/>
                    </StackPanel.Resources>
                    <StackPanel x:Name="ToolsContent">
                        <c:RadioButton Icon="{StaticResource PropertyIcon}"/>
                        <c:RadioButton Icon="{StaticResource ComponentIcon}"/>
                    </StackPanel>
                    <Separator/>
                    <c:RadioButton Icon="{StaticResource RepositoryIcon}" IconSize="13"/>
                </StackPanel>
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="c:RadioButton" BasedOn="{StaticResource {x:Type c:RadioButton}}">
                            <Setter Property="Width" Value="40"/>
                            <Setter Property="Height" Value="40"/>

                            <Setter Property="IconFill" Value="{DynamicResource Color4}"/>
                            <Setter Property="IconSize" Value="14"/>
                            <Setter Property="Icon" Value="{StaticResource CircleIcon}"/>
                        </Style>
                        <Style TargetType="Separator" BasedOn="{StaticResource Separator}"/>
                    </StackPanel.Resources>
                    <StackPanel x:Name="ToolsCircles"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
