<Window
    x:Class="AndromedaStudio.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AndromedaStudio"
    xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
    mc:Ignorable="d"
    Style="{StaticResource WindowStyle}"
    Title="{DynamicResource AppName}">
    <Grid Background="#ffffff">
        <DockPanel>
            <Border x:Name="Head" Background="Transparent" BorderBrush="Black"
                    Height="27" BorderThickness="0,0,0,1" DockPanel.Dock="Top"
                    MouseLeftButtonDown="WindowMove">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <c:Icon Data="{StaticResource Logo}" Grid.Column="1"/>
                </Grid>
            </Border>
            <Grid>

            </Grid>
        </DockPanel>
    </Grid>
</Window>
