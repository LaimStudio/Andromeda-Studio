<Window x:Class="AndromedaStudio.Preloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:AndromedaStudio.Data.Controls"
        Title="Andromeda Studio" Width="300" Height="400" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" MappingMode="RelativeToBoundingBox" StartPoint="0,0">
                <GradientStop Color="#FFC042D7" Offset="1"/>
                <GradientStop Color="#FF5252E0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <c:Icon VerticalAlignment="Center" HorizontalAlignment="Center" Data="{StaticResource Logo}" Size="60" Fill="White"/>
    </Grid>
</Window>
